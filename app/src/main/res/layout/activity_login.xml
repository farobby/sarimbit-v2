<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#0A579F">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#0A579F"
        android:padding="16dp"
        android:layout_margin="16dp"
        >
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_200">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/background_login"/>
            <View
                android:layout_width="match_parent"
                android:background="@color/black"
                android:alpha="0.4"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="8dp"/>

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email@mail.com"
            android:background="@drawable/background_8_white"
            android:padding="12dp"
            android:inputType="textEmailAddress"
            android:textColorHint="#CCCCCC"
            android:layout_marginTop="8dp"/>
        <RelativeLayout
            android:layout_marginTop="16dp"
            android:padding="6dp"
            android:background="@drawable/background_8_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:textColorHint="#CCCCCC"
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Masukkan Password"
                android:inputType="textPassword"
                android:paddingVertical="@dimen/size_8" />

            <ImageView
                android:id="@+id/ivShowPass"
                android:layout_width="@dimen/size_24"
                android:layout_height="@dimen/size_24"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/baseline_remove_red_eye_24"
                android:tag="0" />
        </RelativeLayout>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="#D9534F"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:paddingVertical="12dp"
            android:paddingHorizontal="@dimen/size_72"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk dengan"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/google"
                android:padding="8dp"
                android:background="@drawable/background_white_circle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_google"
                android:layout_marginEnd="16dp"/>

            <ImageView
                android:visibility="gone"
                android:padding="8dp"
                android:background="@drawable/background_white_circle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_facebook"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnRegister"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar"
            android:textAllCaps="false"
            android:paddingVertical="12dp"
            android:paddingHorizontal="@dimen/size_72"
            android:backgroundTint="#D9534F"
            android:textColor="#FFFFFF"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</LinearLayout>
